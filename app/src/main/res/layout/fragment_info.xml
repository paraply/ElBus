<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/infoArrivesIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/infoCircleHolder"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/info_arrives_in"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/infoCircleHolder"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/info_circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeTilArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:textSize="50sp"
                tools:text="16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_min"
                android:textColor="@color/text_color_grey"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/infoBusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/infoArrivesIn"
            android:layout_centerHorizontal="true"
            android:text="@string/info_bus_name"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_chosen_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vald resa"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/info_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chalmers - Lindholmen"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>