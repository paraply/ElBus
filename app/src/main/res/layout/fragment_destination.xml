<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal">

        <TextView
            android:id="@+id/transportLineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="99"/>

        <TextView
            android:id="@+id/transportLineDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginStart="@dimen/spacing_small"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Riktning"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWantToGoFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_want_to_go_from"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/transportFromStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:paddingStart="@dimen/spacing_tiny"
            android:paddingEnd="@dimen/spacing_tiny"
            tools:text="HÃ¥llplats"/>

        <TextView
            android:id="@+id/textFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_to"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>


    <ListView
        android:id="@+id/destinationsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>